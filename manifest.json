{

  "manifest_version": 2,
  "name": "fb-secure-msg",
  "version": "1.0",

  "permissions": [
      "https://www.facebook.com/*",
      "<all_urls>",
      "tabs",
      "webRequest",
      "webRequestBlocking"
  ],

  "browser_action": {
    "default_icon": "logo.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/messages/*"],
      "js": ["fb-secure-msg.js"]
    }
  ],

  "background": {
    "scripts":["background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}